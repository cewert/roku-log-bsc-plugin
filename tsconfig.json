{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017",
      "es2019.array"
    ],
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}